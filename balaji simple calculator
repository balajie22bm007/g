// Online C compiler to run C program online
#include <stdio.h>

int main() {
   char op;
   double num1,num2;
   printf("enter operator (+,-,*,/):");
   scanf("%c",&op);
   printf ("enter two numbers : ");
   scanf("%1f %1f", &num1,num2);
   switch(op){
       case '+':printf("%.2lf\n", num1+num2);break;
         case '-':printf("%.2lf\n", num1-num2);break;
         case '*':printf("%.2lf\n", num1*num2);break; 
           case '/':printf("%.2lf\n", num1/num2);break;
           if(num2 !=0)
           printf("division by zero error .\n");
            else
                printf("Division by zero error.\n");
            break;
        default:
            printf("Invalid operator.\n");
    }

    return 0;
}
       
       
       
